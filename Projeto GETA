//codigo main.javascript
var x;
x = 0;

function somar(){
    x = parseInt(x);
    x++
    document.getElementById("numero").innerText = x
}

function subtrair(){
    x = parseInt(x);
    x--
    document.getElementById("numero").innerText = x
}
